/**index.wxss**/

.banner-warp {
    margin-bottom: 10px;
}

.slide-image {
    width: 100%;
    height: 200px;
}


/* 标题 */

.card-title {
    background: #fff;
    padding: 5px 15px 5px 10px;
    border-left: 5px solid #FC4C91;
    margin-bottom: 10px;
}

.hot-warp {
    white-space: nowrap;
    display: flex;
    background: #fff;
    padding: 0 15px;
    width: auto;
    margin-bottom: 10px;
}

.hot-video-item {
    width: 200px;
    height: 100px;
    display: inline-block;
    margin: 5px;
}

.hot-video-item .hot-image {
    width: 200px;
    height: 100px;
}


/* 推荐 */

.recommend-warp {
    display: block;
    padding: 0 15px;
    background: #fff;
}

.re-video-item {
    width: 100%;
    margin-bottom: 20px;
}

.re-video-item .re-image {
    width: 100%;
    height: 100px;
}

.video-title {
    display: block;
    font-size: 14px;
    text-align: left;
    margin: 10px 0;
}

.video-info-warp {
    display: block;
    height: 30px;
}


/* 视频用户信息 */

.user-info {
    float: left;
}

.user-image {
    width: 30px;
    height: 30px;
    border: 1px solid #fff;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 10px;
    vertical-align: top;
}

.user-name {
    height: 30px;
    font-size: 14px;
    line-height: 30px;
}


/* 点赞 */

.heart-warp {
    float: right;
}

.heart-image {
    width: 15px;
    height: 15px;
    margin-right: 10px;
    margin-top: 7px;
    vertical-align: top;
}

.heart-number {
    height: 30px;
    font-size: 14px;
    line-height: 30px;
    color: #9F9F9F;
}


/* 加载图片 */

.recommend-box-more {
    display: block;
    text-align: center;
    padding-bottom: 10px;
}

.recommend-box-more image {
    width: 20px;
    height: 20px;
}

.recommend-box-more text {
    display: block;
    font-size: 16px;
    color: #666;
}