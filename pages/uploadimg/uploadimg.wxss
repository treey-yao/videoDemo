/**uploadimg.wxss**/

.row-warp {
    margin-top: 10px;
    background: #fff;
    padding: 5px 15px;
}

.upload-warp {
    width: 100%;
    height: 7rem;
    display: block;
    padding-top: 3rem;
    text-align: center;
}

.upload-plus {
    width: 50px;
    height: 50px;
    opacity: .2;
}

.upload-text {
    display: block;
    color: #888888;
}


/* 图片列表 */

.img-list-warp {
    width: 100%;
    min-height: 10rem;
    display: -webkit-flex;
    /* Safari */
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: flex-start;
}

.img-list-item {
    width: 50px;
    height: 50px;
    margin: 10px;
    position: relative;
    border: 1px dashed #888888;
}

.close {
    width: 20px;
    height: 20px;
    position: absolute;
    right: -10px;
    top: -10px;
}

.img-item {
    width: 100%;
    height: 100%;
}

.text-r {
    text-align: right;
}

.text-c {
    text-align: center;
}

.upload-btn {
    padding: 0px 40px;
    background: #FC4C91;
    color: #fff;
    font-size: 16px;
}

.again-video {
    margin: 0px auto;
    color: #FC4C91;
}