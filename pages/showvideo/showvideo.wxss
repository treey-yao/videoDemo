/**classify.wxss**/

.video-warpper {
    width: 100%;
    height: 200px;
}

.video-warpper .video {
    width: 100%;
    height: 100%;
}

.video-title {
    display: block;
    font-size: 14px;
    text-align: left;
    margin: 10px 0;
    padding: 10px 15px;
    background: #fff;
}

.video-info-warp {
    display: block;
    height: 30px;
    padding: 0px 15px;
    background: #fff;
    padding: 10px 15px;
}

.user-info {
    float: left;
}

.user-image {
    width: 30px;
    height: 30px;
    border: 1px solid #fff;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 10px;
    vertical-align: top;
}

.user-name {
    height: 30px;
    font-size: 14px;
    line-height: 30px;
}


/* 点赞 */

.heart-warp {
    float: right;
}

.heart-image {
    width: 15px;
    height: 15px;
    margin-right: 10px;
    margin-top: 7px;
    vertical-align: top;
}

.heart-number {
    height: 30px;
    font-size: 14px;
    line-height: 30px;
    color: #9F9F9F;
}


/* 描述 */

.describe-warp {
    display: block;
    padding: 0px 15px;
    background: #fff;
    padding: 10px 15px;
    word-wrap: break-word;
    word-break: normal;
}